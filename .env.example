# SecondBrain environment configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Path to your Obsidian vault (required for indexing)
SECONDBRAIN_VAULT_PATH=/path/to/your/obsidian/vault

# API server settings
SECONDBRAIN_HOST=127.0.0.1
SECONDBRAIN_PORT=8000

# Data storage directory (relative to project root)
SECONDBRAIN_DATA_PATH=data

# OpenAI API key (required for LLM reranking, synthesis, and OpenAI embeddings)
SECONDBRAIN_OPENAI_API_KEY=sk-...

# Embedding provider: "local" (BAAI/bge-base-en-v1.5) or "openai" (text-embedding-3-small)
SECONDBRAIN_EMBEDDING_PROVIDER=local
SECONDBRAIN_EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
SECONDBRAIN_OPENAI_EMBEDDING_MODEL=text-embedding-3-small
